long long int fact(long long int n)
{
    long long int res=1;
    
    for(int i=1; i<=n; i++)
    {
        res = res*i;
    }
    
    return res;
}

int main()
{
    long long int n;
    
    cout<<"Enter any positive number: ";
    cin>> n;
    
    long long int res = fact(n);
    
    cout<<"The result is: "<<res;
    
    return 0;
}

