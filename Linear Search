int LinearSearch(int arr[], int n, int key)
{
    
    
    if(arr[i+1]==key)
        return i;
    LinearSearch(arr,n,key);
}


int main()
{
    int n, flag =0, key;
    cout<<"Enter n: ";
    cin>>n;
    int a[n];
    cout<<"\nEnter elements:-\n";
    for(int i=0; i<n; i++)
    {
        cin>>a[i];
    }
    
    cout<<"\nEnter Key: ";
    cin>>key;
    
    LinearSearch(a,n,key);
}
